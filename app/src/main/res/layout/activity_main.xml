<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111 x 111"
        android:textSize="20dp"
        android:textColor="#2D3047"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12,321"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="#2D3047"
        app:layout_constraintTop_toBottomOf="@id/operation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/result"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#2D3047"/>

    <Button
        android:id="@+id/seven"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="7"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/eight"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="8"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/seven"
        />

    <Button
        android:id="@+id/nine"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="9"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/eight"
        />

    <Button
        android:id="@+id/plus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="+"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintLeft_toRightOf="@id/nine"
        />

    <Button
        android:id="@+id/four"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="4"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/five"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="5"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintLeft_toRightOf="@id/four"
        />

    <Button
        android:id="@+id/six"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="6"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintLeft_toRightOf="@id/five"
        />

    <Button
        android:id="@+id/minus"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="-"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/seven"
        app:layout_constraintLeft_toRightOf="@id/six"
        />

    <Button
        android:id="@+id/one"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="1"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/two"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="2"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintLeft_toRightOf="@id/one"
        />

    <Button
        android:id="@+id/three"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="3"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintLeft_toRightOf="@id/two"
        />

    <Button
        android:id="@+id/divide"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="/"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/four"
        app:layout_constraintLeft_toRightOf="@id/three"
        />

    <Button
        android:id="@+id/zero"
        android:layout_width="165dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="0"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/multiply"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="x"
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toRightOf="@id/zero"
        />

    <Button
        android:id="@+id/equals"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#e5e5e5"
        android:text="="
        android:textColor="#2D3047"
        android:textSize="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@id/one"
        app:layout_constraintLeft_toRightOf="@id/multiply"
        />





</androidx.constraintlayout.widget.ConstraintLayout>